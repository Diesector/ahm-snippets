      	<?php $counter++; endwhile; ?>
      <?php endif; ?>
    """

  'ACF Repeater Nested':
    'prefix':'acf-repeater-nested'
    'body':"""

      <?php while ( have_posts() ) : the_post(); ?>

      	// check for rows (parent repeater)
      	<?php if( have_rows('to-do_lists') ): ?>

      			<?php
      			// loop through rows (parent repeater)
      			while( have_rows('to-do_lists') ): the_row(); ?>

      				<?php the_sub_field('title'); ?>

      				<?php
      				// check for rows (sub repeater)
      				if( have_rows('items') ): ?>

      					<?php // loop through rows (sub repeater)
      						while( have_rows('items') ): the_row(); // display each item as a list - with a class of completed ( if completed )
      					?>
      					<?php if( get_sub_field('completed') ){ echo 'class="completed"'; } ?><?php the_sub_field('name'); ?>

      					<?php endwhile; ?>

      				<?php endif; //if( get_sub_field('items') ): ?>

      			<?php endwhile; // while( has_sub_field('to-do_lists') ): ?>

      	<?php endif; // if( get_field('to-do_lists') ): ?>

      <?php endwhile; // end of the loop. ?>

    """

