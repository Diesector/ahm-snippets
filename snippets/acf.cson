      		//$width = $image['sizes'][ $size . '-width' ];
      		//$height = $image['sizes'][ $size . '-height' ];

      		?>

      		<?php if( $image ): ?>
      			<img id="counter<?php echo $counter; ?>" src="<?php echo $image['url']; ?>" alt="<?php echo $image['alt'] ?>" />
